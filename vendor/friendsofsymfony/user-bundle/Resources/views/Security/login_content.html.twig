{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


    <form action="{{ path("fos_user_security_check") }}" method="post" class="login100-form validate-form">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <span class="login100-form-title p-b-70">Welcome</span>

        <div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate = "Enter username">

            <input class="input100" type="text" name="_username" id="username"  required="required" >
            <span class="focus-input100" data-placeholder="Username" for="username"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
            <input class="input100" type="password"  id="password" name="_password" required="required">
            <span class="focus-input100" data-placeholder="Password" for="username" for="password"></span>
        </div>

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

        <div class="container-login100-form-btn">

            <input  class="flex-c-m size4 bg7 bo-rad-15 hov1 s-text14 trans-0-4"  type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            <p id="demo"></p>
        </div>

        <ul class="login-more p-t-190">
