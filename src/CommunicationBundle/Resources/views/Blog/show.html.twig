{#{% endfor %}#}

<br><br>


<!-- ============================================================== --> <!-- ============================================================== --> <!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Title and breadcrumb -->




    <div class="page-titles">


        <div class="d-flex align-items-center">
            <h5 class="font-medium m-b-0">Post Detail</h5>

            <div class="custom-breadcrumb ml-auto">
                <a href="{{path("pepiniere_homepage")}}" class="breadcrumb"><i class="large material-icons">arrow_back</i> Go to App</a>
            </div>
            {% if  is_granted('ROLE_ADMIN') or is_granted('ROLE_AGRICULTEUR') or is_granted('ROLE_ENTREPRISE') %}
                <div class="custom-breadcrumb ml-right">
                    <a href="{{path("pepiniere_homepage2")}}" class="breadcrumb"><i class="large material-icons">arrow_back</i> Go to DashBord</a>
                </div>
            {% endif %}


        </div>

        {% for message in app.flashes('notice') %}

            <div class="col m3 s12 align-items-center" >
                <a class="waves-effect waves-light btn red  "  >{{ message }}</a>
            </div>
        {% endfor %}


    </div>

    <!-- ============================================================== -->
    <!-- Container fluid scss in scafholding.scss -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">

            <div class="col s8">

                <div class="card">

                    <div class="card-content">

                        <h5 class="card-title">{{ blogpost.title }}</h5>

                        <p>{{ blogpost.body|nl2br }}</p>

                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        <h5 class="card-title">Post Replies</h5>
                        <ul class="m-t-40">
                            {% for comm in comment  %}
                            <li class="d-flex align-items-center">
                                <img src="{{ asset("profile/assets/images/users/1.jpg") }}" width="60" alt="Generic placeholder image">
                                <div class="m-l-15">
                                    <h5 class="m-b-0">{{ comm.username }}</h5>
                                    <h6 class="m-b-0">{{ comm.createdAt|date }}</h6>{{ comm.content }}
                                </div>
                            </li>

                            <hr>

                            {% endfor %}

                            {% for message in app.flashes('notice') %}

                                <div  id="sa-title">

                                    {{ message }}
                                </div>
                            {% endfor %}
                        </ul>
                    </div>
                </div>



                <div class="card">
                    <div class="card-content">
                        <h5 class="card-title m-b-20">Write a reply</h5>
                        {{ form_start(form) }}

                            {{ form_widget(form.content) }}
                            <input type="submit" value="Reply" class="m-t-20 btn waves-effect waves-light green">


                        {{ form_end(form) }}




                    </div>

                </div>
                <div class="row center-align">
                    <ul class="pagination">
                        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
                        <li class="active"><a href="#!">1</a></li>
                        <li class="waves-effect"><a href="#!">2</a></li>
                        <li class="waves-effect"><a href="#!">3</a></li>
                        <li class="waves-effect"><a href="#!">4</a></li>
                        <li class="waves-effect"><a href="#!">5</a></li>
                        <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col s4">
                <div class="card">
                    <div class="card-content">
                        <h5 class="card-title">Post Info</h5>
                    </div>
                    <div class="card-content bg-light">
                        <div class="row center-align">
                            <div class="col s6 m-t-10 m-b-10">
                                <span class="label label-red">{{ blogpost.categoryName }}</span>
                            </div>
                            <div class="col s6 m-t-10 m-b-10">
                                Created: {{ blogpost.createdAt|date('Y/m/d H:i') }}
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <h6 class="p-t-20">Post Creator</h6>
                        <span>User Name</span>
                        <h6 class="m-t-30">Support Staff</h6>
                        <span>Agent Name</span>
                        <br/>
                        <button type="button" class="m-t-20 btn waves-effect waves-light teal">
                            <a style="color: #E0D0DA"  href="{{ path("blog_edit",{'id': blogpost.id}) }}"> update </a></button>

                        {% if  is_granted('ROLE_ADMIN') %}
                        <button type="button" class="m-t-20 btn waves-effect waves-light red">
                            <a style="color: #E0D0DA"  href="{{ path("admin_blog_delete",{'post': blogpost.id}) }}"> Delete </a></button>

                        {% endif %}

                    </div>
                </div>
                <div class="card">
                    <div class="card-content center-align">
                        <h5 class="card-title">User Info</h5>
                        <div class="profile-pic m-b-20 m-t-20">
                            <img src="{{ asset("profile/assets/images/users/5.jpg") }}" width="150" class="circle" alt="user">
                            <h4 class="m-t-20 m-b-0">{{ user.username }}</h4>
                            <a href="mailto:{{ user.email }}">{{ user.email }}</a>

                        </div>
                        <div class="row center-align m-t-20">
                            <div class="col s4">
                                <h4 class="font-medium">{{ userPostCount.c }}</h4>
                                <h6>Total Posts </h6>
                            </div>

                        </div>
                    </div>
                    <div class="p-25 b-t m-t-15">
                        <div class="row center-align">
                            <div class="col s6 b-r">
                                <a href="#" class="link d-flex align-items-center justify-content-center"><i class="material-icons font-20 m-r-5">chat_bubble</i>Message</a>
                            </div>
                            <div class="col s6">
                                <a href="{{ path('showauthormm',{'id': user.id})}}"    class="link d-flex align-items-center justify-content-center">
                                    <i class="material-icons font-20 m-r-5">collections_bookmark</i>Portfolio</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-content">
                    <h3 class="card-title">Related Posts</h3>
                </div>

                {% for c in related %}

                <div class="card">
                    <img class="card-img-top responsive-img" src="{{ asset("profile/assets/images/big/img4.jpg") }}" alt="Card image cap">
                    <div class="card-content">
                        <div class="d-flex no-block align-items-center m-b-15">
                            <span><i class="ti-calendar"></i> {{ c.createdAt|date('Y/m/d H:i') }}</span>
                            <div class="ml-auto">
                                <a href="javascript:void(0)" class="link"><i class="ti-comments"></i> </a>
                            </div>
                        </div>
                        <h5><a href="{{ path('blog_show', {'id':c.id}) }}">{{ c.title }}</a></h5>
                        <p class="m-b-0 m-t-10">{{ c.body }}</p>
                        <a href="{{ path('blog_show', {'id':c.id}) }}"> <button class="waves-effect waves-light btn btn-round indigo m-t-20">Read more</button></a>
                    </div>
                </div>

                {% endfor %}



            </div>
        </div>

    </div>

