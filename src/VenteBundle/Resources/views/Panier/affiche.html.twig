{% extends "base.html.twig" %}

 {% block home %}


<!-- Cart -->
<section class="cart bgwhite p-t-70 p-b-100">
    <center><h1>Panier de {{ panier[0].user.username }}</h1></center>
    <div class="container">
        <!-- Cart item -->
        <div class="container-table-cart pos-relative">
            <div class="wrap-table-shopping-cart bgwhite">
                <table class="table-shopping-cart" align="center">
                    <tr class="table-head" align="center">
                        <th class="column-1"></th>
                        <th class="column-2">Produit</th>
                        <th class="column-3">Description</th>
                        <th class="column-4" align="center">Prix/unité</th>
                        <th class="column-5 p-l-70" align="center">Quantité</th>
                    </tr>
                    {% set ValidCounter= 0 %}
                    {% set NumberOfElements= 0 %}

                    {% for p in panier %}
                    <tr class="table-row">
                        <td class="column-1" >
                            <div class="cart-img-product b-rad-4 o-f-hidden" >
                                <img src="{{ asset('devis/' ~ p.Produit.devisName1) }}" width="150" height="150px">
                            </div>
                        </td>
                        <td class="column-1">{{ p.Produit.nom }}</td>
                        <td class="column-1">{{ p.Produit.description }}</td>
                        <td class="column-1" align="center">{{ p.Produit.prix }}</td>
                        <td class="column-1">
                            {{ p.qtpanier }}
                        </td>
                        <td class="column-1">
                            <a href="{{ path('updateqte',{'id':p.id}) }}"/>update</td>
                        </td>
                         <td class="column-1" ><a href="{{ path('deletefrompanier',{'id':p.id}) }}"><img src="{{ asset("images/deletecart.png")}}" width="50" height="50"></a></td>
                    </tr>
                        {% set NumberOfElements = NumberOfElements+ 1 %}
                        {% if p.valid==1 %}
                            {% set ValidCounter = ValidCounter+ 1 %}
                        {% endif %}
                    {% endfor %}
                </table>

            </div>
        </div>

        <div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
            <div class="flex-w flex-m w-full-sm">

                <div class="size12 trans-0-4 m-t-10 m-b-10 m-r-10">
                    <!-- Button -->
                    <a href="{{path('ValiderPanier')}}"><button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                        Valider Panier
                        </button></a>
                </div>
            </div>
     {% if ValidCounter==NumberOfElements %}
            <div class="size10 trans-0-4 m-t-10 m-b-10">
                <!-- Button -->
                <a href="{{path('afficheFacture')}}"><button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                    Générer la facture
                    </button></a>
            </div>
{% endif %}

        </div>

    </div>
</section>






<!-- Back to top -->
<div class="btn-back-to-top bg0-hov" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="fa fa-angle-double-up" aria-hidden="true"></i>
		</span>
</div>

<!-- Container Selection -->
<div id="dropDownSelect1"></div>
<div id="dropDownSelect2"></div>




     {% endblock home %}