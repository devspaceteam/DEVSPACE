{% extends "base.html.twig" %}

 {% block home %}





     {{ form_start(form) }}
     <center>
         <table width='700' height='400' border='1'>
             <tr>
                 <th rowspan='2'>
                     <div  >
                         <img src="{{ asset('devis/' ~ panier.Produit.devisName1) }}" height="350px" width="350px">
                     </div>
                 </th>
                 <th height='50' colspan="2"  class="column-2">Nom du produit : {{ panier.Produit.nom }}</th>
             </tr>
             <tr>
                 <td class="column-3" colspan="2">{{ panier.Produit.description }}</td>
             </tr>
             <tr>
                 <td  height='50'>
                    Prix unitaire : $ {{ panier.Produit.prix }}

                 </td>
                 <td width='170' height='50'  class="column-4" style="border-bottom: hidden;border-right: hidden">
                     <div class="flex-w bo5 of-hidden w-size17">
                         <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                             <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                         </button>
                         {{ form_widget(form.qtpanier, { 'attr': {'class': "size8 m-text18 t-center num-product",'placeholder': "QTE"} }) }}
                         <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2 ">
                             <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                         </button>
                     </div>
                 </td>
                 <td  height='50' width='170' style="border-bottom: hidden;border-right: hidden"> <input type="submit" value="Modifer" class="btn btn-primary btn-block " width="50%" ></td>

             </tr>
         </table>


     {{ form_end(form) }}
     <br><br><br><br><br>
 {% endblock home %}