{% extends "base.html.twig" %}

 {% block home %}
	<!-- Product Detail -->
	<div class="container bgwhite p-t-35 p-b-80">
		<div class="flex-w flex-sb">
			<div class="w-size13 p-t-30 respon5">
				<div class="wrap-slick3 flex-sb flex-w">
					<div class="wrap-slick3-dots"></div>

					<div class="slick3">
						<div class="item-slick3" data-thumb="{{ asset('devis/' ~ produit.devisName1) }}">
							<div class="wrap-pic-w">
								<img src="{{ asset('devis/' ~ produit.devisName1) }}" alt="IMG-PRODUCT"height="600px" width="400px">
							</div>
						</div>

						<div class="item-slick3" data-thumb="{{ asset('devis/' ~ produit.devisName2) }}">
							<div class="wrap-pic-w">
								<img src="{{ asset('devis/' ~ produit.devisName2) }}" alt="IMG-PRODUCT" height="600px" width="400px">
							</div>
						</div>

						<div class="item-slick3" data-thumb="{{ asset('devis/' ~ produit.devisName3) }}">
							<div class="wrap-pic-w">
								<img src="{{ asset('devis/' ~ produit.devisName3) }}" alt="IMG-PRODUCT"height="600px" width="400px">
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="w-size14 p-t-30 respon5">
				<h4 class="product-detail-name m-text16 p-b-13">
					{{ produit.nom }}
				</h4>

				<span class="m-text17">
					${{ produit.prix }}
				</span>



				<!--  -->
				<div class="p-t-33 p-b-60">
					<div class="flex-r-m flex-w p-t-10">
						<div class="w-size16 flex-m flex-w">
							<div class="flex-w bo5 of-hidden m-r-22 m-t-10 m-b-10">
                                {% if produit.quantite !=0  %}
								<input class="size9 trans-0-4 m-t-10 m-b-10" value="1" type="number" name="number" min="1" max="{{ produit.quantite }}" >
								{% endif %}
							</div>

							<div class="btn-addcart-product-detail size9 trans-0-4 m-t-10 m-b-10">
								<!-- Button -->
								{% if produit.quantite ==0  %}
								{% else  %}
									<button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
										Add to Cart
									</button>
									{% endif %}
							</div>
						</div>
					</div>
				</div>

				<!--  -->
				<div class="wrap-dropdown-content bo6 p-t-15 p-b-14 active-dropdown-content">
					<h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
						Description

					</h5>


						<p class="s-text8">
							{{ produit.description }}
						</p>

				</div>
			</div>
		</div>
	</div>


	<!-- Relate Product -->

	{% endblock %}