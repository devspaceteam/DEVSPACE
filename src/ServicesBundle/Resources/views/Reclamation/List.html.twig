{% extends "base.html.twig" %}

 {% block home %}

     <section class="cart bgwhite p-t-70 p-b-100">
         <div class="container">
             <!-- Cart item -->
             <div class="container-table-cart pos-relative">
                 <div class="wrap-table-shopping-cart bgwhite">
                     <table class="table-shopping-cart">
                         <tr class="table-head">
                             <th class="column-1">Sujet</th>
                             <th class="column-1">Reclamation Consernant</th>
                             <th class="column-1 p-l-70">Utilisateur a été réclamé</th>
                             <th class="column-1" >Date</th>
                             <th class="column-1"  colspan="2" style="text-align: center">Action</th>
                         </tr>
     {% for reclamation in myreclamation %}
                         <tr class="table-row">
                             <td class="column-1">{{ reclamation.subject }}</td>
                             <td class="column-1">{{ reclamation.type }}</td>
                             <td class="column-1">{{ reclamation.usertoclaim }}</td>
                             <td class="column-1">{{ reclamation.date|date }}</td>
                             <td class="column-1"><a href ="{{path("UpdateReclamation",{'id':reclamation.id,'type':reclamation.type})}}"><button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">Modifier</button></a></td>
                             <td class="column-1"><a href ="{{path("DeleteReclamation",{'id':reclamation.id})}}"><button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">Supprimer</button></a></td>
                         </tr>
     {% endfor %}
                     </table>
                 </div>
             </div>

             <div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
                 <div class="flex-w flex-m w-full-sm">
                     {{ form_start(form) }}
                     RECLAMATION CONSERNANT
                     {{ form_widget (form.type, { 'attr': {'class': "sizefull s-text7 p-l-22 p-r-22"}}) }}
                 </div>
                     <div class="size10 trans-0-4 m-t-10 m-b-10">
                         <input type="submit" value="Search" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                     </div>
                     {{ form_end(form) }}
             </div>


         </div>
     </section>









 {% endblock home %}